type Query {
    # A simple example string
    example: String
    pins(id: Int): [Pin]
    schema(id: Int): [Schema]
}
type Mutation {
    editPin(id: Int!, name: String!): Pin
    setPinState(id:Int!, state: Boolean!): Pin
    setPinDefaultState(id:Int!, state: Boolean!): Pin
    createSchema(name:String!, pins:[StateInput]!): Schema
    editSchema(id: Int!, name:String!, pins:[StateInput]!): Schema
    deleteSchema(id:Int!): Schema
}

input StateInput {
    pinid: Int!
    state: Int!
}

type Pin {
    id: Int!
    name: String
    activated: Boolean
    default_activated: Boolean
}

type Schema {
    pins: [Pin]!
    name: String
    id: Int
    active: Boolean
}
